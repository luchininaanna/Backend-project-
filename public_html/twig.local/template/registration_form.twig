{% extends "layout.twig" %}

{% block content %}
    <div id = "authorization_form">
      <div class="grid-x grid-padding-x">
        <div class="large-4 medium-3 small-1"></div>
        <div class="large-4 medium-6 small-10 cell">
          <div class="base_form">
            <div class="form_name">Sign Up</div>
              <div class="registration">
                 <form method="post" id="ajax_form" action="">

                   <div>
                     <input type="text" class="sign_up_first_name" name="first_name" placeholder="First Name" required/>
                     <input type="text" class="sign_up_last_name" name="last_name" placeholder="Last Name" required/>
                   </div>

                   <input type="text" class="sign_up_username" name="username" placeholder="Username" required/>

                   <input type="text" class="sign_up_email" name="email" placeholder="Email Address" required/>

                   <input type="password" class="sign_up_password" name="password_1" placeholder="Password" required/>

                   <input type="password" class="sign_up_password" name="password_2" placeholder="Repeat Password" required/>

                   <div>
                     <input class="button" type="button" id="registration_submit" value="Sign Up" />
                   </div>

                 </form>
              </div>
          </div>
        </div>
        <div class="large-4 medium-3 small-1"></div>
      </div>
    </div>

    <script src="../js/eventListenerForForm.js"></script>
    <script src="../js/form.js"></script>
{% endblock %}


